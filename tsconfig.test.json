{
    "compilerOptions": {
      "charset": "utf8",
      "experimentalDecorators": true,
      "module": "amd",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noImplicitThis": true,
      "strict": true,
      "target": "es6",
      "rootDir": "src/",
      "outDir": "dist/",
      "jsx": "react",
      "lib": [
        "es5",
        "es6",
        "dom",
        "esnext",
        "es2015.promise"
      ],
      "types": [
        "react",
        "jest",
        "node"
      ],
      //"allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "allowUmdGlobalAccess": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      //"isolatedModules": false,
      "noEmit": false,
    },
    "include": ["src", "types"],
  }
  