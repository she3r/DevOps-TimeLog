{
    "compilerOptions": {
       // "charset": "utf8",
        "experimentalDecorators": true,
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strict": true,
        "target": "es6",
        "rootDir": "src/",
        "outDir": "dist/",
        "jsx": "react",
        "lib": [
          "es5",
          "es6",
          "dom",
          "esnext",
          "es2015.promise"
        ],
        "types": [
            "react",
            "jest",
            "node"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        //"allowJs": true,
        "skipLibCheck": true,
        //"isolatedModules": true,
        "resolveJsonModule": true,
    }
}